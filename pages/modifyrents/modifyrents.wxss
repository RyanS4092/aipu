/* pages/modifyrents/modifyrents.wxss */
.formbar{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 55px;
  background-color: #fff;
  margin-top: 10px;
}
.formtitles{
  margin-left: 6vw;
}
.forminput{
  width: 70vw;
  text-align: right;
  margin-right: 20px;
}
.submitbutton{
  width: 100%;
  height: 48px;
  position: fixed;
  left: 0;
  bottom: 0;
  display: flex;
}
.viewrentinfo{
  width: 50%;
  height: 100%;
  background-color: #fff;
  text-align: center;
  color: #000;
  border-radius: 0;
  border: solid 1px #c0c0c0;
}
.submit{
  width: 50%;
  height: 100%;
  background-color: #dd5454;
  text-align: center;
  color: #fff;
  border-radius: 0;
  border: solid 1px #dd5454;
}
picker{
  width: 70vw;
  text-align: right;
  margin-right: 20px;
  height: 50px;
  display: flex;
  align-items: center;
  flex-direction: row-reverse;
}
.formreminder{
  color: #dd5454;
  font-size: 12px;
  margin-top: 5px;
  margin-left: 6vw;
}
.textarea-wrap{
  width: 100%;
  margin-top: 10px;
  background-color: #fff;
  padding-left: 6vw;
  padding-top: 10px;
}
.textarea{
  width: 90vw;
}
.selectlocation-wrap{
  margin-right: 3vw;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  width: 35vw;
}
.selectlocation{
  width: 30px;
  height: 30px;
}
.success{
  width: 25px;
  height: 25px;
  margin-right: 10px;
}
.uploadimg{
  width: 100%;
  background-color: #fff;
  margin-top: 10px;
  padding-bottom: 20px;
}
.uploadimg-title{
  padding-top: 10px;
  margin-left: 6vw;
}
.uploadimg-reminder{
  margin-top: 5px;
  font-size: 12px;
  color: #a6a6a6;
  margin-left: 6vw;
}
.uploadarea{
  margin-top: 10px;
  width: 88vw;
  margin-left: 6vw;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.greyblock{
  width: 27vw;
  height: 20vw;
  background-color: #f2f2f2;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 10px;
}
.default{
  font-size: 25px;
  color: #a6a6a6;
}
.imguploaded{
  width: 100%;
  height: 100%;
}
.specialties-wrap{
  width: 100%;
  background-color: rgba(0, 0, 0, 0.6);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
}
.specialties{
  display: flex;
  flex-wrap: wrap;
  margin-left: 3vw;
  margin-bottom: 20px;
}
.specialties-item{
  margin-left: 10px;
  margin-top: 20px;
  font-size: 14px;
}
.specialties-select{
  width: 35vw;
  margin-right: 20px;
  text-align: right;
}