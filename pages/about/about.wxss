/* pages/about/about.wxss */
.about{
  display: flex;
  flex-direction: column;
  width: 100%;
}
.logo{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  flex-flow: wrap;
  margin-top: 20px;
}
.logo-img{
  width: 150px;
  height: 150px;
}
.logo-text{
  width: 100%;
  text-align: center;
  font-size: 22px;
  font-weight: bold;
  color: #615f9e;
}
.about-title{
  margin-left: 20px;
  font-size: 18px;
  color: #615f9e;
  margin-top: 20px;
}
.about-description{
  font-size: 16px;
  margin-top: 10px;
  margin-left: 20px;
  padding-right: 20px;
}