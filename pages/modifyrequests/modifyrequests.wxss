/* pages/modifyrequests/modifyrequests.wxss */
.formbar{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 55px;
  background-color: #fff;
  margin-top: 10px;
}
.formtitles{
  margin-left: 6vw;
}
.forminput{
  width: 70vw;
  text-align: right;
  margin-right: 20px;
}
.submitbutton{
  width: 100%;
  height: 48px;
  position: fixed;
  left: 0;
  bottom: 0;
}
.submit{
  width: 100%;
  height: 48px;
  background-color: #dd5454;
  text-align: center;
  color: #fff;
  border-radius: 0;
}
picker{
  width: 70vw;
  text-align: right;
  margin-right: 20px;
  height: 50px;
  display: flex;
  align-items: center;
  flex-direction: row-reverse;
}
.formreminder{
  color: #dd5454;
  font-size: 12px;
  margin-top: 5px;
  margin-left: 6vw;
}
.textarea{
  margin-top: 10px;
  background-color: #fff;
  padding-left: 6vw;
  padding-top: 15px;
  width: 100%;
}
.selectlocation-wrap{
  margin-right: 3vw;
  display: flex;
  align-items: center;
}
.selectlocation{
  width: 30px;
  height: 30px;
}
.success{
  width: 25px;
  height: 25px;
  margin-right: 10px;
}