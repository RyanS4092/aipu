/* pages/index/index.wxss */
swiper{
  height: 50vw;
}
.swiper-wrap{
  display: block;
  width: 100%;
  height: 50vw;
}
.swiper-item{
  width: 100%;
  height: 100%;
}
.navbar{
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-around;
  margin-top: 15px;
}
.navbar-item{
  display: flex;
  flex-direction: row-reverse;
  justify-content: center;
  width:20vw;
}
.navbar-link{
  width: 50px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.navbar-img{
  width: 40px;
  height: 40px;
}
.navbar-text{
  font-size: 12px;
  margin-top: 2px;
}
.statistics{
  width: 100%;
  margin-top: 10px;
}
.statistics-firstline{
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
}
.statistics-title{
  margin-left: 13px;
  font-size: 16px;
}
.statistics-location{
  margin-left: 5px;
  font-size: 10px;
  color: #868686;
}
.statistics-more{
  font-size: 10px;
  color: #868686;
  margin-right: 16px;
}
.statistics-hightlight{
  margin-top: 20px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.statistics-average{
  font-size: 28px;
  display: inline-block;
}
.statistics-updown{
  font-size: 10px;
  color: #505050;
}
.statistics-unit{
  font-size: 10px;
  color: #505050;
}
.statistics-thirdline{
  margin-top: 20px;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.statistics-thirdline-column{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.statistics-thirdline-numbers{
  font-size: 18px;
}
.statistics-thirdline-numbers span{
  font-size: 12px;
}
.statistics-thirdline-text{
  font-size: 12px;
  color: #dd5454;
}
.recommend{
  width: 100%;
  margin-top: 10px;
}
.recommend-title{
  margin-left: 13px;
  font-size: 16px;
}