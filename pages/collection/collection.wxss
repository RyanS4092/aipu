.bar{
  width: 100%;
  display: flex;
  flex-wrap: nowrap;
}
.bar-list{
  display: flex;
  justify-content: center;
  flex-direction: column;
  width: 50%;
  text-align: center;
}
.bar-text{
  margin-top: 10px;
  margin-bottom: 10px;
}
.bar-text-red{
  color: #dd5454;
  margin-top: 10px;
  margin-bottom: 10px;
}
.bar-red{
  width: 100%;
  height: 1px;
  background-color: #dd5454;
}
.bar-grey{
  width: 100%;
  height: 1px;
  background-color: #e5e5e5;
}