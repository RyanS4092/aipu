/* pages/requests/requests.wxss */
.request{
  display: flex;
  width: 100%;
  flex-direction: column;
}
.request-title{
  font-size: 20px;
  font-weight: bold;
  padding: 20px;
}
.request-time{
  font-size: 10px;
  color: #8f8f8f;
  padding: 0 20px 0;
}
.greybar{
  width: 100%;
  height: 3px;
  background-color: #f7f7f7;
  margin-top: 17px;
  margin-bottom: 8px;
}
.request-lists{
  font-size: 14px;
  color: #8f8f8f;
  padding: 0 20px;
  margin: 11px 0;
}
.red{
  color: #dd5454;
}
.black{
  color: #000;
}
.call{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 48px;
  z-index: 999;
  background-color: #dd5454;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}
.call cover-image{
  width: 20px;
  height: 20px;
  margin-right: 5px;
}
.call cover-view{
  font-size: 18px;
  color: #fff;
}
.requestsbar{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 48px;
  background: white;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
}
.requestsbar-border{
  background-color: rgba(0, 0, 0, 0.33);
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1px;
  transform: scaleY(0.5);
}
.requestsbar-collection{
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  width: 20%;
}
.requestsbar-collection cover-image{
  width: 24px;
  height: 24px;
}
.requestsbar-collection cover-view{
  font-size: 10px;
}
.requestsbar-share{
  width: 40%;
}
.requestsbar-share-button{
  width: 100%;
  height: 100%;
  background-color: #e9f0e8;
  color: #00c800;
  border: none;
  border-radius: 0;
}
.requestsbar-share-inner{
  width: 100%;
  height: 48px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.requestsbar-share cover-image{
  width: 24px;
  height: 24px;
}
.requestsbar-share cover-view{
  font-size: 14px;
}
.requestsbar-call{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 40%;
  background-color: #dd5454;
  color: #fff;
}
.requestsbar-call cover-image{
  width: 24px;
  height: 24px;
}
.requestsbar-call cover-view{
  font-size: 14px;
}