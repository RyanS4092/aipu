/* pages/requests/requests.wxss */
.request{
  display: flex;
  width: 100%;
  flex-direction: column;
}
.request-title{
  font-size: 20px;
  font-weight: bold;
  padding: 20px;
}
.request-time{
  font-size: 10px;
  color: #8f8f8f;
  padding: 0 20px 0;
}
.greybar{
  width: 100%;
  height: 3px;
  background-color: #f7f7f7;
  margin-top: 17px;
  margin-bottom: 8px;
}
.request-lists{
  font-size: 14px;
  color: #8f8f8f;
  padding: 0 20px;
  margin: 11px 0;
}
.red{
  color: #dd5454;
}
.black{
  color: #000;
}
.call{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 48px;
  z-index: 999;
  background-color: #dd5454;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}
.call cover-image{
  width: 20px;
  height: 20px;
  margin-right: 5px;
}
.call cover-view{
  font-size: 18px;
  color: #fff;
}