/* pages/search/search.wxss */
.searchbar{
  width: 87%;
  height: 20px;
  padding: 20px 20px 0 20px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.searchbar-click{
  background-color: #f0f0f0;
  padding: 5px 10px;
  display: flex;
  width: 70vw;
  height: 18px;
  border-radius: 5px;
  align-items: center;
}
.searchbar-icon{
  width: 16px;
  height: 16px;
}
.searchbar-text{
  font-size: 14px;
  color: #808080;
  margin-left: 10px;
  width: 80%;
}
.makeacall{
  width: 18px;
  height: 18px;
}
.selectlist-wrap{
  padding: 20px 20px 10px;
  display: flex;
  justify-content: space-between;
}
