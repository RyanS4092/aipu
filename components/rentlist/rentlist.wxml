<!--components/rentlist/rentlist.wxml-->
<view class="rentinform" wx:for="{{rentinform}}">
  <view class='rentinform-wrap'>
    <image class='rentinform-left' src='{{item.rentimg}}'></image>
    <view class='rentinform-right'>
      <view class='rentinform-firstline'>{{item.location}} | {{item.area}}„é°</view>
      <view class='rentinform-secondline'>
        <view class='rentinform-description'>{{item.description}}</view>
        <view class='rentinform-price'>{{item.price}}</view>
      </view>
      <view wx:for="{{item.taglist}}" class='rentinform-thirdline'>
        <view class='rentinform-tags'>{{item.tags}}</view>
      </view>
    </view>
  </view>
</view>
