/* components/rentlist/rentlist.wxss */
.rentinform{
  display: flex;
  flex-direction: column;
  width: 100%;
}
.rentinform-wrap{
  display: flex;
  margin-left: 13px;
  flex-wrap: nowrap;
  margin-top: 15px;
}
.rentinform-left{
  width: 35vw;
  height: 28vw;
  overflow: hidden;
}
.rentinform-hot{
  position: relative;
  left: 0;
  top: -29vw;
  z-index: 5;
  width: 22px;
  font-size: 10px;
  padding: 2px 3px;
  background-color: #f6c83c;
  color: #fff;
}
.rentinform-img{
  position: relative;
  left: 0;
  top: 0;
  z-index: 1;
  width: 100%;
  height: 100%;
}
.rentinform-img2{
  position: relative;
  left: 0;
  top: 0;
  z-index: 1;
  width: 100%;
  height: 100%;
}
.rentinform-right{
  width: 53vw;
  margin-left: 10px;
  height: 28vw;
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-between;
}
.rentinform-firstline{
  font-size: 15px;
  height: 17px;
  overflow: hidden;
  line-height: 20px;
}
.rentinform-secondline{
  font-size: 13px;
  display: flex;
  justify-content: space-between;
  
}
.rentinform-description-wrap{
  display: flex;
  align-items: top;
}
.rentinform-description{
  width: 100px;
  font-size: 12px;
  height: 14px;
  overflow: hidden;
  color: #868686;
  line-height: 16px;
}
.rentinform-dots{
  color: #868686;
  margin-top: -3px;
}
.rentinform-price{
  color: #dd5454;
  font-size: 12px;
}
.rentinform-thirdline{
  width: 100%;
  height: 15px;
  overflow: hidden;
  display: flex;
  flex-wrap: wrap;
  margin-top: 2px;
}
.rentinform-thirdline-item{
  font-size: 11px;
  margin-bottom: 10px;
}

.rentinform-tags{
  padding: 1px 4px;
  background-color: #e6e6e6;
  border-radius: 5px;
  margin-right: 10px;
  color: #777777;
}

.divider-rentlist{
  width: 94%;
  height: 1px;
  background-color: #e5e5e5;
  margin-left: 10px;
  margin-top: 10px;
}