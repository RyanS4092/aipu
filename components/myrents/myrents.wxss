/* components/myrents/myrents.wxss */
.rentinform{
  display: flex;
  flex-direction: column;
  width: 100%;
}
.rentinform-wrap{
  display: flex;
  margin-left: 13px;
  flex-wrap: nowrap;
  margin-top: 15px;
}
.rentinform-left{
  width: 35vw;
  height: 28vw;
  overflow: hidden;
}
.rentinform-hot{
  position: relative;
  left: 0;
  top: -29vw;
  z-index: 5;
  width: 22px;
  font-size: 10px;
  padding: 2px 3px;
  background-color: #f6c83c;
  color: #fff;
}
.rentinform-img{
  position: relative;
  left: 0;
  top: 0;
  z-index: 1;
  width: 100%;
  height: 100%;
}
.rentinform-img2{
  position: relative;
  left: 0;
  top: 0;
  z-index: 1;
  width: 100%;
  height: 100%;
}
.rentinform-right{
  width: 53vw;
  margin-left: 10px;
  height: 28vw;
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-between;
}
.rentinform-firstline{
  font-size: 15px;
  height: 17px;
  overflow: hidden;
  line-height: 20px;
}
.rentinform-timeShow{
  font-size: 12px;
  color: #868686;
}

.rentinform-buttons{
  height: 25px;
  width: 100%;
  display: flex;
  flex-wrap: nowrap;
  margin-top: -2px;
}
.rentinform-buttons-items{
  width: 30%;
  margin-right: 3%;
  height: 23px;
  font-size: 10px;
  padding: 14px 0;
  line-height: 0;
  margin-left: 0;
  border-radius: 5px;
  border: 0.1px solid #b9b9b9;
  background-color: #fff;
}

.rentinform-buttons-hover{
  background-color: #b9b9b9;
}

.divider-rentlist{
  width: 94%;
  height: 1px;
  background-color: #e5e5e5;
  margin-left: 10px;
  margin-top: 10px;
}