/* components/myrequests/myrequests.wxss */
.requestinform{
  display: flex;
  flex-direction: column;
  width: 100%;
  justify-content: space-between;
}
.request-firstline{
  display: flex;
  justify-content: space-between;
  margin-left: 15px;
  margin-top: 15px;
}
.request-title{
  font-size: 14px;
  font-weight: bold;
}
.request-timeShow{
  margin-left: 15px;
  font-size: 11px;
  color: #8f8f8f;
  margin-top: 15px;
}

.request-buttons{
  margin-left: 13px;
  margin-top: 15px;
  height: 25px;
  display: flex;
  flex-wrap: nowrap;
}
.request-buttons-items{
  width: 80px;
  margin-right: 10px;
  height: 28px;
  font-size: 12px;
  padding: 14px 0;
  line-height: 0;
  margin-left: 0;
  border-radius: 5px;
  border: 0.1px solid #b9b9b9;
  background-color: #fff;
}

.request-buttons-hover{
  background-color: #b9b9b9;
}
.divider-request{
  width: 94%;
  height: 1px;
  background-color: #e5e5e5;
  margin-left: 13px;
  margin-top: 15px;
}